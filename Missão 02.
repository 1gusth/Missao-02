package exemplo.de.nat;
import java.util.Scanner;
        public class ExemploDeNat {
        public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        int a;
        System.out.print("Digite um número: ");
        a = teclado.nextInt();
        if (a>0 & a<=9) {
            System.out.println("Número permitido!");
        } else {
            System.out.println("Número inválido!");
        }
    }
}

16)

package exemplo.de.nat;
import java.util.Scanner;
        public class ExemploDeNat {
        public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        int a,b;
        System.out.print("Digite seu primeiro número: ");
        a = teclado.nextInt();
        System.out.print("Digite seu segundo número: ");
        b = teclado.nextInt();
        if ((a-b) < 0) {
            System.out.println("A diferença é negativa!");
        } else {
            System.out.println("A diferença é positiva!");
        }
    }
}
