package exemplo.de.nat;
import java.util.Scanner;
        public class ExemploDeNat {
        public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        double a, b, c;
        System.out.print("Digite seu número A: ");
        a = teclado.nextDouble();
        System.out.print("Digite seu número B: ");
        b = teclado.nextDouble();
        System.out.print("Digite seu número C: ");
        c = teclado.nextDouble();
        if (a<b+c & b<a+c & c<a+b) {
            System.out.println("Podem ser os lados de um triângulo!");
        } else {
            System.out.println("NÃO podem ser os lados de um triângulo!");
        }
    }
}

